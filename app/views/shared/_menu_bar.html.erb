<% tweet_items = [
    { :link => tweets_path, :name => (t 'Twitter2') },
    { :link => "#page_top", :name => (t 'back_to_top') },
    #{ :link => new_tweet_path, :name => (t 'new_memo') },
    #{ :link => find_tweets_path, :name => 'Find Memos' },
