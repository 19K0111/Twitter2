<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col">
      <div class="field">
        <!-- <%= f.label :email %><br /> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: t("email") %>
      </div>
    </div>

    <div class="col-auto">
      <div class="actions">
        <%= f.submit t("send"), class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
