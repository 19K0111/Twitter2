<div id="right_scroll">
  <h1 id="tweets">Tweets</h1>
  <table>
    <div>
      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td>
              <div class="content">
                <%= render tweet %>
                <p>
                  <%= link_to "Show this tweet", tweet %>
                </p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </div>
  </table>

  <!-- <%= link_to "New tweet", new_tweet_path %> -->
</div>
